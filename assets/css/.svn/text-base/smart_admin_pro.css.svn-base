	.tab-day{
		height:auto;
	    padding-bottom:15px;
	}
	.tab-day p{margin-top:35px;}
	.title-client.scheduler{
		margin-top: 25px;
		margin-bottom: 30px;
		font-size:25px;
	}
	.fix-in-row{
		height:auto;
	}
}


