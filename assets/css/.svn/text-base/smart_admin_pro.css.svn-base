@media only screen and (max-width: 991px) {
	
	.total-photo{width: calc(100% - 15px)!important;}

	/*tuy chinh header*/
	.logo-explore, .avata-help{text-align:center;}
	.avata-help ul{float:none;}
	/*tuy chinh menu top*/
	.menu-top{height:auto;padding-bottom:10px;}
	
	/*tuy chinh tab library photo*/
	.photo-library .blok-tab-photop li{width:100%;}
	.photo-library .blok-tab-photop li:nth-child(2){
		margin-left:-1px;
		width:calc(100% + 1px);
	}
	.photo-library .blok-tab-photop li:nth-child(3){
		margin-left:0;
	}
	.ft-page{height:auto;}
	
	/*change widht and hieght popup dashboard*/
	#popup-booking{
		max-width:640px;
		max-height:400px;
	}
	.avarta-icon{height:auto;}
	/*qui dinh chieu rong border dashboard -> client*/	
	.item-client:before{
		content:'';
		position:absolute;
		left:-15px;
		bottom:-2px;
		width:calc(100% + 30px);
		height:2px;
		background-color:#dcdcdc;
	}
	
	/*chang scheduler */
	/*.day-in-week,.week-in-month,.day-in-week li,.day-in-week li:nth-child(7),
	.day-in-week li:nth-child(6){width:100%;}*/
	
	.check-item p{font-size:20px;}
	.posi-fixed-tabday{
		top:139px;
	}
	.photo-library .blok-tab-photop li:nth-child(3){border-left: 1px solid #8b6ce4;}
	.child-top-add{margin-top:284px;}
	
	.img-sales{margin-bottom:30px;}
	
	
	
	.fix-tab-service.blok-tab-photop{margin-bottom:15px;}
	
	.creat-upload.test{float:right;}
	.row.scroll{margin-left:0;margin-bottom:70px;}
	
	.blk-sales-left{padding-right:0px;}
	.sales-right{padding-left:0px;margin-bottom:30px;}
	.mb-mg-b-20{margin-bottom:20px;}
	
	.day-in-week li{
		font-size:14px;
		height:75px;
		padding-top:10px;
	}
	.week-in-month{height:75px;border-left:none;position:relative;}
	.week-in-month:after{
		content: '';
		position: absolute;
		left: -18px;
		bottom: -1px;
		width: calc(100% + 18px);
		height: 1px;
		background-color: #dcdcdc;
	}
	.parent-scrll-mb-990{overflow-x:auto;}
	.mb-scl-w-990{width:990px!important;}
	.ovr-hide-parent{
		width:100%;
		padding:0 15px;
		position:relative;
	}
	.ovr-hide-parent:after{
		content:'';
		width:1px;
		height:100%;
		position:absolute;
		left:15px;
		top:0;
		background-color:#dcdcdc;
	}
	.ovr-hide-parent:before{
		content:'';
		width:1px;
		height:100%;
		position:absolute;
		right:15px;
		top:0;
		background-color:#dcdcdc;
	}
	.title-daily.mb-add{
		margin-top:15px;
	}
	
	.fix-in-row{
		height:385px;
	}
	
}/*end 991*/
