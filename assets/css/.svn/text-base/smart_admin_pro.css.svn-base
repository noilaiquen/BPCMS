/*For device: tablet, mobile*/
/*Min -> 320px -> 768px ->992px -> 1024px -> Max*/



@media only screen and (min-width: 992px) {

	.item-photo img{
		max-width:269px;
		max-height:269px;
		width:100%;
		height:auto;
		border-radius:10px;
	}
	
	/*qui dinh chieu rong border dashboard -> client*/
	.blk-ctr-3n .item-3n:nth-child(3n) .item-client:before{width:100%;}
}

@media only screen and (max-width: 1200px) {
	.item-client li:nth-child(2) {
		padding-left:0;
	}
	
	.fav-addcontact li{
		margin-bottom:30px;
		margin-left:9px;
	}
	.fav-addcontact li:last-child{margin-left:10px;}
	
	.check-item p{font-size:16px;}
	
	.photo-save-upload input:nth-child(1), .photo-save-upload textarea{
		max-width:100%;
	}
	
	.avarta-off-on li:nth-child(2) {
		float: left;
		position: relative;
		display: block;
		width: 100%;
		height: 40px;
		margin-bottom:70px;
	}
	.avarta-off-on li:nth-child(1) h3{margin-bottom:15px;}
	.avarta-off-on span{top:0;right:auto;}
	.avarta-off-on span:nth-child(1){left:0;}
	.avarta-off-on span:nth-child(2){left:68px;}
}

