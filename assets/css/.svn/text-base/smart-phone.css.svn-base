/*For device: tablet, mobile*/
/*Min -> 320px -> 768px ->992px -> 1024px -> Max*/

/*HEADER CHANGE FOR SCREEN*/
@media only screen and (min-width: 1600px) {
	.slogan-home {
		margin-top:50px;
		margin-bottom:120px;
	}

}
@media only screen and (min-width: 1200px) and (max-width: 1450px) {
	.home-popu{
		background:url('../images/home/home_bg_12_14.jpg') no-repeat;
	}
}
@media only screen and (min-width: 1200px) and (max-width: 1599px) {
	.slogan-home {
		margin-top:17px;
		margin-bottom: 42px;
	}

}
@media only screen and (min-width: 992px) and (max-width: 1199px) {
	.slogan-home{
	    margin-top: 223px;
		margin-bottom:18px;
	}
	.slogan-home h2{font-size:52px;}
	.slogan-home h3{font-size:22px;}
	.home-popu{
		background:url('../images/home/bg_home_199.jpg') no-repeat;
	}
}
@media only screen and (max-width: 991px) {
	/* .home-popu{ */
		/* background:url('../images/home/bg_home_edit_tablet.jpg') no-repeat; */
	/* } */
	.slogan-home{
	    margin-top:190px;
		margin-bottom: 150px;
	}
	.slogan-home h2{font-size:32px;margin-bottom:15px;}
	.slogan-home h3{font-size:18px;}
	.slogan-home .get-star, .slogan-home .lear-more, .slogan-home .icon-dow{display:none;}
	.blk-fix-head-extend{display:block;margin-bottom:25px;}
}
