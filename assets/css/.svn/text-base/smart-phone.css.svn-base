@media only screen and (max-width: 991px) {
	.work-it .w-it-img{
		text-align:left;
	}
	.text-work-it{padding-left:15px;padding-right:15px;}
	.ft-page,
	.rice-service{height:auto;padding-bottom:20px;}
	.work-it{max-height:1158px;}
	
	.center-tablet{text-align:left;margin-top:50px;}
	
	.home-media{
		width:50%;
		float:left;
	}
	.blk-show-991{
		display:block;
		width:50%;
		float:left;
	    margin-top: 15px;
	}
	.ft-img{float:left;}
	.blk-hide-991{display:none;}
}
@media only screen and (max-width: 767px) {
	.rice-service h3{font-size:20px!important;}
	.brow-cover h2{font-size:40px;}
	.home-video h2{font-size:30px;line-height:35px;text-align:left;}
	.download-home h2{font-size:40px;}
	.dwl-ios{margin-right:0;}
	.home-video{padding-bottom:0;}
	.blk-fix-head-extend  .lear-more{margin-top:20px!important;}
}


@media screen and (max-width:600px) {
	.slogan-home h2{margin-bottom:25px;font-size:30px;}
 	.slogan-home{
		margin-top:70px;
		margin-bottom:50px;
	}
	
}


@media only screen and (max-width: 430px) {
	.rice-service h3{display:none;}
	.home-video h2{font-size:30px;padding-top:25px;}
	.download-home h2{font-size:30px;padding-top:20px;}
	.blk-show-991,.home-media{width:100%;}
	.rice-service{padding-bottom:50px;}
	.get-star{
		height:auto;
		padding-top:3px;
		font-size:16px;
	}
	.blk-fix-head-extend .lear-more{margin-top:50px;}
	.rice-service{padding-bottom:0px;}
	
	.popup-home{
		max-width:320px;
		width:100%;
	}
	.popup-home ul li{
		max-width:320px;
		width:100%;
	    height: 35px;
		padding-top: 3px;
	}
	.log-fb{
		width:230px;
		font-size:16px;
	    padding-left: 70px;
		display:none;
	}
	.popup-home ul{
		width:320px;
		margin-bottom:25px;
	}
	.fancybox-inner{
		max-height:510px!important;
		height:auto;
	}
	.fb-show-mb{
		display:block;
		text-align:center;
		margin-bottom:0px;
		font-size:16px;
	}
	.popup-home ul li p{
		text-align:left;
		padding-left:55px;
	}
	.popup-home form span.line-or{margin-bottom:25px;}
	
	.fancybox-inner{
		overflow-y:scroll!important;
	}
	
	ul.home-media  li{
		display:inline-block;
		margin-right:20px;
	}
	.list-service li{
	    display: inline-block;
	    margin-right: 15px;	
	}
	.about-home h3{padding-right:0px;}
}

#customer-support textarea{
	background-color:#fff!important;
}

.header_background_pc, .header_background_phone{
	position:absolute;
	left:0;
	top:0;
	right:0;
	bottom:0;
	width:100%;
	height:100%;
}
.header_background_phone{display:none;}
@media screen and (max-width: 520px){
	.header_background_pc{display:none;}
	.header_background_phone{display:block;}
	.logo-sigup .logo{
		width: 100px;
		height: 100px;
	    background-size: 100%;
	}
	.logo-sigup ul{
	    margin-top: 10px;	
	}
	.ft-page{padding-bottom:40px;}
	
	.item-sli-mb-- .title--sli-next{
		font-size: 15px;
		color: #7f7f7f;
		font-family: 'Roboto-Medium';
		margin-bottom: 0;
		line-height: 23px;		
	}
}


